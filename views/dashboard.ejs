    <script>
        // Function to update the URL and trigger a page reload with the selected timeframes
        function updateDashboard(timeframeType, timeframeValue) {
            const url = new URL(window.location.href);
            url.searchParams.set(timeframeType, timeframeValue);
            console.log('Updated URL:', url.toString());
            window.location.href = url.toString();
        }

        // Function to set the selected option in the dropdown based on the URL query parameters
        function setSelectedOption(selectId, defaultValue) {
            const url = new URL(window.location.href);
            const selectedValue = url.searchParams.get(selectId);
            console.log('Selected Value:', selectedValue); // Add this line for debugging
            const selectElement = document.getElementById(selectId);
            selectElement.value = selectedValue || defaultValue;
        }

        // Event listeners for timeframe selection
        document.getElementById('track-timeframe').addEventListener('change', function () {
            console.log('Track timeframe selected:', this.value);
            updateDashboard('track-timeframe', this.value);
        });

        document.getElementById('artist-timeframe').addEventListener('change', function () {
            console.log('Artist timeframe selected:', this.value);
            updateDashboard('artist-timeframe', this.value);
        });

        // Set the selected options for the dropdowns on page load
        document.addEventListener('DOMContentLoaded', function () {
            setSelectedOption('track-timeframe', 'short_term');
            setSelectedOption('artist-timeframe', 'short_term');
        });
    </script>
